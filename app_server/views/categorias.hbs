<div class="rectangulo">
    <img src="{{urlfotofondo}}" width="100%" height="100%">
    <div class='text-block'>
        <h1>{{title}}</h1>
    </div>
</div>
<br>
<div class='container'>
    <div class='row text-center pt-5'>
        <div class='col-md-12'>
            <div class='btn-group btn-group-lg btn-group-justified'>
                {{#each categorias}}
                <a href="/categorias/{{this}}" class="btn btn-primary">{{this}}</a>
                {{/each}}
            </div>
        </div>
    </div>
    <br>
    <div class="tz-gallery">

        <div class="row">
            {{#each fotos}}
            {{#each this.fotos}}
            <div class="col-sm-6 col-md-4">
                <a class="lightbox" href="{{this.url}}">
                    <img src="{{this.url}}" alt="fotoLightbox">
                </a>
            </div>
            {{/each}}
            {{/each}}
            {{#unless fotos}}
            <h1 style='text-align: center;'> Click en una categor√≠a para desplegar </h1>
            {{/unless}}
        </div>

    </div>
</div>